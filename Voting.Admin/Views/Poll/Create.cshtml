@model Poll
@{
    ViewBag.Title = "Create Poll";
}

<h2>@ViewBag.Title</h2>

<form asp-controller="Poll" asp-action="Create" method="post" class="form-horizontal" role="form">
    <hr />
    <h5>Poll</h5>
    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <hr />
    <h5>Options</h5>
    <div class="form-group">
        <label class="col-md-2 control-label">Option 1</label>
        <div class="col-md-10">
            <input asp-for="VoteOptions[0].Name" class="form-control" />
            <span asp-validation-for="VoteOptions[0].Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Option 2</label>
        <div class="col-md-10">
            <input asp-for="VoteOptions[1].Name" class="form-control" />
            <span asp-validation-for="VoteOptions[1].Name" class="text-danger"></span>
        </div>
    </div>
    <hr />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Create" />
        </div>
    </div>
</form>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
