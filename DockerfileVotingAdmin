FROM microsoft/aspnet:1.0.0-rc1-update1-coreclr

COPY ./Voting.Admin /app/Voting.Admin
COPY ./Voting.Model /app/Voting.Model

WORKDIR /app/Voting.Admin

RUN ["dnu", "restore"]
RUN rm -r node_modules

EXPOSE 5000/tcp
ENTRYPOINT ["dnx", "web", "--server.urls", "http://0.0.0.0:5000", "--ASPNET_ENV", "production"]
